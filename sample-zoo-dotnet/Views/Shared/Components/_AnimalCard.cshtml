@using sample_zoo_dotnet.Models
@* component animalcard *@
<div @Cms.Edit(Model.key) 
    class="animal-card animal-card-app">
    
    <h3>@Model.cms.Text("title", "Insert animal name")</h3>

    <img src="@(Cms.Origin + Model.cms.Text("image.filePath", Cms.ImgPlaceholder) + 
              // disable cache when editing
              (Cms.Authoring ? "?_" + (new Random()).Next().ToString("X") : String.Empty))"
         alt="@Model.cms.Text("title")">

    <p>@Model.cms.Html("description", "Insert animal description")</p>

</div>